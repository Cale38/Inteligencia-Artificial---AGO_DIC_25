import numpy as np
import pandas as pd
import matplotlib.pyplot as plt

# Cambienlo por el path de donde tengan el csv pa que no haya fallas 
df = pd.read_csv("C:\\Users\\calem\\OneDrive - Universidad Autonoma de Nuevo León\\Inteligencia artifical\\Tarea_2\\data.csv", nrows=10)

def zero_lessdf(col):   #Intercambiar ceros por mean de columna
    mean = col[col != 0].mean()
    return col.replace(0,mean)

df = df.apply(zero_lessdf)

scaled = df.copy()  #Normalización de valores

for column in scaled.columns:
    scaled[column] = (scaled[column] - scaled[column].min()) / (scaled[column].max() - scaled[column].min())
print (scaled) # <--- ese print no es de ahuevo creo, nomas lo tengo para ir viendo los cambios en valores

#prints y plots de df normalizados

#Todavía ando probando esto de abajo

glucose_hist = scaled['Glucose']
glucose_hist.plot(kind='hist')

plt.show()
